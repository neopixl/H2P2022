<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="NAME NAME NAME NAMENASDNASNDASNDANSDNASDNASNDNAME NAME NAME NAMENASDNASNDASNDANSDNASDNASND"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView" app:layout_constraintStart_toEndOf="@+id/logoImageView"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/logoImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textStyle="italic" android:textColor="#9C27B0"
            android:fontFamily="sans-serif-medium" android:textSize="24sp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/logo"
            android:id="@+id/logoImageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="STATUSSTATUSSTATUSSTATUSSTATUSSTATUSSTATUSSTATUSSTATUSSTATUS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/statusTextView" app:layout_constraintStart_toEndOf="@+id/logoImageView"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" android:fontFamily="sans-serif-medium"
            android:textSize="14sp" android:textColor="#FFEB3B" android:textStyle="bold|italic"
            android:textAllCaps="true" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/speciesTextView" android:maxLines="1" android:ellipsize="end"/>
    <TextView
            android:text="SPECIES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speciesTextView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            android:textSize="24sp" android:textColor="#00BCD4" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>